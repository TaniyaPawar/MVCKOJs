@*customer*@

@model MVCKO.Models.KOCustomer

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<div id="delete-customer">
    <h4>Customer</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>@Html.DisplayNameFor(model => model.ID)</dt>
        <dd data-bind="text: selectedCustomer.ID"></dd>

        <dt>@Html.DisplayNameFor(model => model.CustomerName)</dt>
        <dd data-bind="text: selectedCustomer.CustomerName"></dd>

        <dt>@Html.DisplayNameFor(model => model.CustomerAddress)</dt>
        <dd data-bind="text: selectedCustomer.CustomerAddress"></dd>

    </dl>

    @using (Html.BeginForm("", "", FormMethod.Post, new { id = "delete-customer-form", action = "javascript:void(0);" }))
    {
        @Html.AntiForgeryToken()
        <input hidden data-bind="value: selectedCustomer.ID" id="ID" name="ID" />
        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" data-bind="click: deleteConfirmed" />
        </div>
    }
</div>
